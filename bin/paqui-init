#!/usr/bin/env node

'use strict';

var parse = require('../src/command/lib/parse.js');

require('../src').configure(function (program) {
    program
        .option('-e, --existing', 'Creates a .paquirc file for an existing project')
        .option('-f, --force', 'A way to force your way past warnings. Want a suggestion? Don\'t use this option, fix your flow.')
        .option('-g, --no-git', 'Doesn\'t initialize a git repository');
}, parse.options).use(module);
